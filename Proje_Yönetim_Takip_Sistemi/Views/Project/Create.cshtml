@model Proje_Yönetim_Takip_Sistemi.Models.Project

@{
    ViewData["Title"] = "Yeni Proje";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0"><i class="bi bi-file-earmark-plus"></i> Yeni Proje</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div class="row g-3">
                    <!-- Proje Adı -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Proje Adı</label>
                        <input asp-for="project_name" class="form-control" placeholder="Proje adını girin" />
                    </div>
                    <!-- Açıklama -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Açıklama</label>
                        <input asp-for="statement" class="form-control" placeholder="Açıklama girin" />
                    </div>
                    <!-- Başlangıç Tarihi -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Başlangıç Tarihi</label>
                        <input asp-for="start_day" type="date" class="form-control" />
                    </div>
                    <!-- Bitiş Tarihi -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Bitiş Tarihi</label>
                        <input asp-for="end_day" type="date" class="form-control" />
                    </div>
                    <!-- Durum -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Durum</label>
                        <select asp-for="status" asp-items="Html.GetEnumSelectList<ProjectStatus>()" class="form-select">
                            <option value="">Seçiniz...</option>
                        </select>
                    </div>
                </div>

                <div class="mt-4 d-flex gap-2 justify-content-between">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-lg"></i> Kaydet
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Geri
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
