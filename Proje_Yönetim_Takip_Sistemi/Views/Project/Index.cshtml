@model IEnumerable<Project>

<h2 class="mt-4 mb-4">PROJELER</h2>


<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Proje</a>
</p>


<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Proje Adı</th>
                <th>Açıklama</th>
                <th>Başlangıç Tarihi</th>
                <th>Bitiş Tarihi</th>
                <th>Durum</th>
                <th>Görevler</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.project_name</td>
                    <td>@item.statement</td>
                    <td>@item.start_day.ToShortDateString()</td>
                    <td>@item.end_day.ToShortDateString()</td>
                    <td>@item.status.ToString()</td>
                    <td>
                        <!-- Görevleri Gör -->
                        <a asp-controller="Task" asp-action="Index" asp-route-projectId="@item.Id" class="btn btn-info btn-sm">Görevleri Gör</a>
                        <!-- Kullanıcıları Ata  -->
                        <a asp-controller="Project" asp-action="AssignUsers" asp-route-projectId="@item.Id" class="btn btn-warning btn-sm">Kullanıcıları Ata</a>
                    </td>
                    
                    <!-- İşlemler Bölümü -->
                    <td>
                        
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">Düzenle</a>
                        
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>