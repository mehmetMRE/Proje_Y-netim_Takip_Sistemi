@model             TaskModel

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0"><i class="bi bi-pencil-square"></i> Görev Güncelle</h2>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ProjectId" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Görev Adı</label>
                        <input asp-for="TaskName" class="form-control" readonly="@(!ViewBag.IsAdmin)" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Açıklama</label>
                        <textarea asp-for="Description" class="form-control" readonly="@(!ViewBag.IsAdmin)"></textarea>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Atanan Kullanıcı</label>
                        <textarea asp-for="AssignedUser" class="form-control" readonly="@(!ViewBag.IsAdmin)"></textarea>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Başlangıç Tarihi</label>
                        <input type="date" asp-for="StartDate" class="form-control" readonly="@(!ViewBag.IsAdmin)" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Bitiş Tarihi</label>
                        <input type="date" asp-for="EndDate" class="form-control" readonly="@(!ViewBag.IsAdmin)" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Durum</label>
                        <select asp-for="Status" class="form-select">
                            <option value="Beklemede" selected="@(Model.Status == "Beklemede" ? "selected" : null)">Beklemede</option>
                            <option value="Devam Ediyor" selected="@(Model.Status == "Devam Ediyor" ? "selected" : null)">Devam Ediyor</option>
                            <option value="Tamamlandı" selected="@(Model.Status == "Tamamlandı" ? "selected" : null)">Tamamlandı</option>
                        </select>
                    </div>
                </div>

                <div class="mt-4 d-flex gap-2 justify-content-between">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-lg"></i> Güncelle
                    </button>
                    <a asp-action="Index" asp-route-projectId="@Model.ProjectId" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
