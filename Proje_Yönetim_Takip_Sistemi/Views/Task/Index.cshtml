@model IEnumerable<TaskModel>

<h2>Görevler</h2>
<p>
    <a asp-action="Create" asp-route-projectId="@ViewBag.ProjectId" class="btn btn-primary mb-3">Yeni Görev Ekle</a>
</p>
<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Görev Adı</th>
            <th>Açıklama</th>
            <th>Atanan Kullanıcılar</th>
            <th>Başlangıç Tarihi</th>
            <th>Bitiş Tarihi</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.TaskName</td>
                <td>@task.Description</td>
                <td>@task.AssignedUser</td>
                <td>@task.StartDate.ToShortDateString()</td>
                <td>@task.EndDate.ToShortDateString()</td>
                <td>@task.Status</td>
                <td>
                    <a asp-action="AssignUsers" asp-route-taskId="@task.Id" class="btn btn-warning btn-sm">Kullanıcı Ata</a>
                    <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-info btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@task.Id" class="btn btn-danger btn-sm" onclick="return confirm('Seçilen Görev Silinsin mi?')">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
